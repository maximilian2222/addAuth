<h1>Кошик</h1>



<div id="card">
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Назва</th>
            <th>Кількість</th>
            <th>Дія</th>
        </tr>
        </thead>
        <tbody>

        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btm-small js-remove" data-id="{{id}}" >Видалити</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <p><strong>Ціна:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="post">

        <button type="submit" class="btn"> Замовлення</button>

    </form>

{{else}}
    <p>Кошик пустий</p>
{{/if}}
</div>

